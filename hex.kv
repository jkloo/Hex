#:kivy 1.8.0

<Tile>:
    size: self.grid_scale, self.grid_scale
    pos: self.grid_x * self.grid_scale, self.grid_y * self.grid_scale
    canvas:
        Rectangle:
            pos: root.pos
            size: root.size
            source: root.source

<Grid>:
    size: self.tiles_scale * self.tiles_x, self.tiles_scale * self.tiles_y

<ScrollView>:
    size: root.size

<Character>:
    size: self.grid_scale, self.grid_scale
    pos: self.grid_scale * self.grid_x, self.grid_scale * self.grid_y
    canvas:
        Rectangle:
            pos: root.pos
            size: root.size
            source: root.source
