#:kivy 1.8.0

<Tile>:
    size: self.scale, self.scale
    pos: self.grid_x * self.scale, self.grid_y * self.scale
    canvas:
        Rectangle:
            pos: root.pos
            size: root.size
            source: root.source

<Grid>:
    size: self.tiles_scale * self.tiles_x, self.tiles_scale * self.tiles_y

<ScrollView>:
    size: root.size
